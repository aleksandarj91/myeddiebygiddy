<section class="landing2-videos-section text-center edy-section-gap2">
  <div class="container-fluid">
    <h2 class="fw-bold mb-3">{{ section.settings.heading }}</h2>
    <p class="text-muted mb-5">{{ section.settings.subheading }}</p>

    <div class="row g-4">
      <div class="col-12 col-md-4">
        <h5 class="fw-bold mb-3">How It Works</h5>
        <a href="{{ section.settings.video_1_url }}" target="_blank" class="d-block position-relative">
          <img src="{{ section.settings.thumbnail1 | img_url: 'master' }}" alt="How It Works video" class="img-fluid rounded">
          <span
            class="position-absolute top-50 start-50 translate-middle bg-dark text-white rounded-circle d-flex align-items-center justify-content-center"
            style="width:60px; height:60px; font-size:30px;"
          >
            &#9658;
          </span>
        </a>
      </div>

      <div class="col-12 col-md-4">
        <h5 class="fw-bold mb-3">How to Wear</h5>
        <a href="{{ section.settings.video_2_url }}" target="_blank" class="d-block position-relative">
          <img src="{{ section.settings.thumbnail2 | img_url: 'master' }}" alt="How It Works video" class="img-fluid rounded">
          <span
            class="position-absolute top-50 start-50 translate-middle bg-dark text-white rounded-circle d-flex align-items-center justify-content-center"
            style="width:60px; height:60px; font-size:30px;"
          >
            &#9658;
          </span>
        </a>
      </div>

      <div class="col-12 col-md-4">
        <h5 class="fw-bold mb-3">How to Size</h5>
        <a href="{{ section.settings.video_3_url }}" target="_blank" class="d-block position-relative">
          <img src="{{ section.settings.thumbnail3 | img_url: 'master' }}" alt="How It Works video" class="img-fluid rounded">
          <span
            class="position-absolute top-50 start-50 translate-middle bg-dark text-white rounded-circle d-flex align-items-center justify-content-center"
            style="width:60px; height:60px; font-size:30px;"
          >
            &#9658;
          </span>
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Landing2 Videos",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Learn More About Eddie"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Section Subheading",
      "default": "Discover just how simple it is to get acquainted with Eddie"
    },
    {
      "type": "url",
      "id": "video_1_url",
      "label": "How It Works Video URL"
    },
    {
      "type": "image_picker",
      "id": "thumbnail1",
      "label": "Thumbnail 1"
    },
    {
      "type": "url",
      "id": "video_2_url",
      "label": "How to Wear Video URL"
    },
    {
      "type": "image_picker",
      "id": "thumbnail2",
      "label": "Thumbnail 2"
    },
    {
      "type": "url",
      "id": "video_3_url",
      "label": "How to Size Video URL"
    },
    {
      "type": "image_picker",
      "id": "thumbnail3",
      "label": "Thumbnail 3"
    },
  ],
  "presets": [
    {
      "name": "Landing2 Videos",
      "category": "Landing2"
    }
  ]
}
{% endschema %}
