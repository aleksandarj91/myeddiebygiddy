<section class="edy-call-to-action-area edy-section-gap bg-gradient-dkblue1 ">
  <div class="container">
      <div class="row">
          <div class="col-12">
              <div>
                  <div class="edy-callto-action edy-cta-default style-6">
                      <div class="container">
                          <div class="row g-5 align-items-center content-wrapper">
                              <div class="col-lg-12">
                                  <div class="inner">
                                      <div class="content text-center">
                                          <h2 class="title color-white mb--0">{{ section.settings.section_heading }}</h2>
                                          <p class="color-white">{{ section.settings.section_content }}</p>
                                          {% if section.settings.section_btn_url %}
                                            <a id="btn-order" class="edy-btn radius-round replace-url mt--10" href="{{ section.settings.section_btn_url }}">
                                              <span class="btn-text">{{ section.settings.section_btn_label }}</span>
                                            </a>
                                          {% endif %}                                          
                                      </div>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>

{% schema %}
  {
    "name": "Take pleasure",
    "settings": [
      {
        "type": "header",
        "content": "Take pleasure Content"
      },
      {
          "type": "text",
          "id": "section_heading",
          "label": "Take pleasure Heading",
          "default": "Take pleasure in health"
      },
      {
          "type": "textarea",
          "id": "section_content",
          "label": "Take pleasure Content",
          "default": "Eddie is the feel-good health device that works with your <br class='d-lg-block d-none'> natural physiology to treat erectile dysfunction."
      },
      {
          "type": "text",
          "id": "section_btn_label",
          "label": "Button Label",
          "default": "SUBSCRIBE NOW"
      },
      {
          "type": "url",
          "id": "section_btn_url",
          "label": "Button URL"
      }
    ],
    "presets": [{
      "name": "Home Take pleasure",
      "category": "Home"
    }]
  }
{% endschema %}