<section class="eddie-guarantee-section edy-section-gap2 text-center">
  <div class="container">
    <h2 class="text-white">{{ section.settings.heading }}</h2>

    <div class="row g-4 mb-5">
      <div class="col-12 col-md-4">
        <div class="d-flex flex-column align-items-center justify-content-center p-3 rounded-3" style="background-color: #1e293b;">
          <img
            src="{{ section.settings.icon1 | img_url: 'master' }}"
            alt="{{ section.settings.text1 }}"
            width="80"
            height="80"
            class="mb-16"
          >
          <span class="text-white text-center">{{ section.settings.text1 }}</span>
        </div>
      </div>

      <div class="col-12 col-md-4">
        <div class="d-flex flex-column align-items-center justify-content-center p-3 rounded-3">
          <img
            src="{{ section.settings.icon2 | img_url: 'master' }}"
            alt="{{ section.settings.text2 }}"
            width="80"
            height="80"
            class="mb-16"
          >
          <span class="text-white text-center">{{ section.settings.text2 }}</span>
        </div>
      </div>

      <div class="col-12 col-md-4">
        <div class="d-flex flex-column align-items-center justify-content-center p-3 rounded-3" style="background-color: #1e293b;">
          <img
            src="{{ section.settings.icon3 | img_url: 'master' }}"
            alt="{{ section.settings.text3 }}"
            width="80"
            height="80"
            class="mb-16"
          >
          <span class="text-white text-center">{{ section.settings.text3 }}</span>
        </div>
      </div>
    </div>

    <a href="{{ section.settings.button_link }}" class="edy-btn btn-white radius-round guarantee-cta">
      {{ section.settings.button_text }}
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Landing2 Eddie Guarantee",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "The Eddie Guarantee"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP WITH CONFIDENCE"
    },
    {
      "type": "image_picker",
      "id": "icon1",
      "label": "Icon 1"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Text 1",
      "default": "Free size replacements"
    },
    {
      "type": "image_picker",
      "id": "icon2",
      "label": "Icon 2"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Text 2",
      "default": "30 day money back guarantee"
    },
    {
      "type": "image_picker",
      "id": "icon3",
      "label": "Icon 3"
    },
    {
      "type": "text",
      "id": "text3",
      "label": "Text 3",
      "default": "Discreet & Free Shipping"
    },
  ],
  "presets": [
    {
      "name": "Landing2 Eddie Guarantee",
      "category": "Landing2"
    }
  ]
}
{% endschema %}
