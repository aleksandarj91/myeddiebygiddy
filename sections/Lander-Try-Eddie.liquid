<section class="edy-lander-cta-area edy-section-gap bg-color-darkblue">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div>
          <div class="edy-callto-action edy-cta-default style-6">
            <div class="container">
              <div class="row g-5 align-items-center content-wrapper">
                <div class="col-lg-12">
                  <div class="inner">
                    <div class="content text-center">
                      <h2 class="title color-white mb--25">{{ section.settings.section_heading }}</h2>
                      <p class="color-white">{{ section.settings.section_content }}</p>
                      {% if section.settings.section_btn_url %}
                        <a
                          id="btn-order"
                          class="edy-btn radius-round replace-url"
                          href="{{ section.settings.section_btn_url }}">
                          <span class="btn-text">{{ section.settings.section_btn_label }}</span>
                        </a>
                      {% endif %}

                      {% if section.settings.section_small_text %}
                        <p class="color-white mt--10 small-text">{{ section.settings.section_small_text }}</p>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Lander Try Eddie",
    "settings": [
      {
        "type": "header",
        "content": "Try Eddie Content"
      },
      {
        "type": "text",
        "id": "section_heading",
        "label": "Try Eddie Heading",
        "default": "Try Eddie in health"
      },
      {
        "type": "textarea",
        "id": "section_content",
        "label": "Try Eddie Content",
        "default": "Get free shipping, free resizes, and a 30-day money back guarantee"
      },
      {
        "type": "text",
        "id": "section_btn_label",
        "label": "Button Label",
        "default": "TAKE THE QUIZ  & GET $20 OFF"
      }, {
        "type": "url",
        "id": "section_btn_url",
        "label": "Button URL"
      }, {
        "type": "text",
        "id": "section_small_text",
        "label": "Small Text Below Button",
        "default": "2 minutes to complete"
      }
    ],
    "presets": [
      {
        "name": "Lander Try Eddie",
        "category": "Home"
      }
    ]
  }
{% endschema %}