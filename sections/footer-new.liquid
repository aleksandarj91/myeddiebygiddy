      "default": "Get the latest from Eddie."
    }, 
    {
      "type": "header",
      "content": "Footer Info"
    },
    {
      "id": "footer_info",
      "type": "textarea",
      "label": "Footer short info",
      "default": "This information does not constitute medical advice and it should not be relied upon as such. Consult with your doctor before modifying your regular medical regimen."
    }, 
    {
      "type": "header",
      "content": "Copyright Info"
    },
    {
      "id": "copyright_text",
      "type": "textarea",
      "label": "Copyright Text",
      "default": "Copyright Giddy® | All Rights Reserved."
    }, 
    {
      "type": "header",
      "content": "Link Menu"
    },
    {
      "id": "link_label",
      "type": "text",
      "label": "Link Label",
      "default": "LINKS"
    },
    {
       "type": "link_list",
       "id": "link_menu",
       "label": "Select Menu"
    }, 
    {
      "type": "header",
      "content": "Support Menu"
    },
    {
      "id": "support_label",
      "type": "text",
      "label": "Support Label",
      "default": "SUPPORT"
    },
    {
       "type": "link_list",
       "id": "support_menu",
       "label": "Select Menu"
    }
    ],
  "presets": [{
    "name": "Footer",
    "category": "Footer"
  }]
  }
{% endschema %}