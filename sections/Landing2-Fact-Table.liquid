<section class="fact-table-section">
  <div class="fact-table-container">
    <h2 class="fact-table-heading text-center">Why More Men (and Their Partners) Choose Eddie</h2>

    <div class="fact-table">
      <!-- Header Row -->
      <div class="fact-table-row header text-center">
        <div class="feature-col text-center">FEATURE</div>
        <div class="eddie-col eddie-header text-center">
          <img
                src="{{ section.settings.logo | img_url: 'master' }}"
                class="fact-table-logo"
                alt="Eddie logo"
                loading="lazy"
        ></div>
        <div class="rings-col text-center">ED Rings</div>
      </div>

      <!-- Data Rows -->
